<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>link-ify</title>
</head>
<body>
    <div class="container">
        <h1>link-ify</h1>
        <form action="/shortUrls" method="POST" class="my-4 form-inline">

            <div class="input-group mb-3">
                <input required type="url" class="form-control" id="fullUrl" name="fullUrl" placeholder="Url" aria-label="Url" aria-describedby="Url to shorten">
                <button class="btn btn-outline-secondary" type="submit" id="button-submit-url">Shorten The URL</button>
            </div>

        </form>
        
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th scope="col">Full Url</th>
                    <th scope="col">Short Url</th>
                    <th scope="col">Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl => { %>
                    <tr>
                        <th scope="row"><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></th>
                        <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
                        <td><%= shortUrl.clicks %></td>
                        
                    </tr>    
                <% }) %>
            </tbody>
        </table>
    </div>
    
    
    <script src="index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>